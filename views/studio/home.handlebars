{{> nav_studio}}

<style>

#intro-photo {
  height: 90vh;
  width: 100%;
  background: url("{{ studio.introduction_photo }}");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  animation-name: fade;
  animation-duration: 2s;
}

#intro-title {
  width: 35%;
  margin: 30vh 0 0 0;
  padding: 30px 15px;
  background-color: #ffffff;
  box-shadow: 0px 10px 10px 0px #a3a3a3;
  opacity: 0.8;

  text-align: center;
  font-size: 36px;
  letter-spacing: 4px;

  animation-name: fade-title;
  animation-duration: 4s;
}

#intro-title>p {
  margin: 20px 0;
}

#intro-detail {
  width: 100%;
  margin: 25vh auto 0 auto;
  background-color: #ffffff;
  padding: 50px 15px;
  box-shadow: 0px 0px 10px 0px #a3a3a3;
  opacity: 0.8;


  text-align: center;
  font-size: 168x;
  letter-spacing: 3px;

  animation-name: fade-title;
  animation-duration: 8s;
}

@keyframes fade {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fade-title {
  from {
    opacity: 0;
  }
  to {
    opacity: 0.8;
  }
}
</style>






<section class="d-flex justify-content-center">

  <div id="intro-photo">
    <div id="intro-title">
      <p>{{studio.introduction_title}}</p>
    </div>
    <div id="intro-detail">
      <p>{{studio.introduction_detail}}</p>
    </div>
  </div>

</section>

