{{> nav_admin_studio}}

<link rel="stylesheet" href="/style/admin_studio.css"></link>

<a href="/{{studio.subdomain}}/admin/price/create" class="studio-owner-create-btn">建立價格</a>

{{#if priceRuleList}}
<table class="admin-studio-table">
  <thead class="admin-studio-table-head">
    <tr>
      <th>種類</th>
      <th>價格</th>
      <th>點數</th>
      <th>備註</th>
      <th>使用期限（天）</th>
      <th>上架日</th>
      <th>修改</th>
    </tr>
  </thead>

  {{#each priceRuleList}}
  <tbody>
    <tr>
      <td>{{this.category}}</td>
      <td>$ {{this.price}}</td>
      <td>{{this.point}} 點</td>
      <td>{{this.remark}}</td>
      <td>{{this.term}}</td>
      <td>{{this.publish_at}}</td>
      <td class="admin-studio-edit-btn">
        <a href="/{{../studio.subdomain}}/admin/price/{{this.id}}">修改</a>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>


{{else}}
<div class="about-title d-flex justify-content-center align-items-center">
  <p>暫無價格</p>
</div>
{{/if}}